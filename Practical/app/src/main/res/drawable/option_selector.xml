<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <padding android:bottom="@dimen/_10sdp"
                android:left="@dimen/_15sdp" android:right="@dimen/_15sdp"
                android:top="@dimen/_10sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/black" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <padding android:bottom="@dimen/_10sdp"
                android:left="@dimen/_15sdp" android:right="@dimen/_15sdp"
                android:top="@dimen/_10sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/black" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>
</selector>